@model OwnBI.ViewModels.DocIndexViewModel


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">

    <div class="col-md-2">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var docType in Model.DocTypes)
            {
                <li>@Html.ActionLink("Create New " + docType.Name, "Create", new { type = docType.Id })</li>
            }
        </ul>
    </div>

    <div class="col-md-10">

        <div class="row" style="padding-bottom: 25px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <form class="form-inline">
                    <div class="col-sm-11 col-xs-11 col-md-11">
                        <input class="form-control" style="max-width: none; width: 100%;" type="text" id="query" name="query" placeholder="Suche..." value="@(Model.Query)">
                    </div>
                    <div class="col-sm-1 col-xs-1 col-md-1">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </div>
                </form>
            }
        </div>

        <table class="table">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Type
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Docs)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @item.Name
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
            }

        </table>
    </div>
</div>